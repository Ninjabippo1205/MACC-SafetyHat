<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="344dp"
        android:layout_height="258dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/safety_hat_description"
        android:scaleType="centerCrop"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@mipmap/safety_hat_big_foreground"
        app:layout_constraintBottom_toTopOf="@+id/appNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="32dp"
        android:text="@string/safety_hat"
        android:textColor="#707070"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView"
        android:minWidth="213dp"
        android:minHeight="66dp"
    />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="242dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameTextView">

        <!-- Buttons inside the LinearLayout remain unchanged -->
        <Button
            android:id="@+id/signInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F2F2F2"
            android:elevation="4dp"
            android:minWidth="120dp"
            android:minHeight="60dp"
            android:padding="16dp"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="#2C2C2C"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2C2C2C"
            android:elevation="4dp"
            android:padding="16dp"
            android:textSize="20sp"
            android:text="@string/register"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:minWidth="120dp"
            android:minHeight="60dp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>