<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#E0E0E0"
    >

    <ImageView
        android:id="@+id/worker_menu_icon"
        android:layout_width="72dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/menÃ¹"
        android:foregroundGravity="top|left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_foreground"/>

    <TextView
        android:id="@+id/sites_worker_info_text"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginStart="66dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="65dp"
        android:drawablePadding="0dp"
        android:gravity="center_vertical"
        android:text="@string/site"
        android:textColor="#2C2C2C"
        android:textSize="30sp"
        app:drawableStartCompat="@mipmap/bulldozer_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_worker_info_text" />

    <TextView
        android:id="@+id/account_worker_info_text"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginStart="66dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="65dp"
        android:drawablePadding="0dp"
        android:gravity="center_vertical"
        android:text="@string/account"
        android:textColor="#2C2C2C"
        android:textSize="30sp"
        app:drawableStartCompat="@mipmap/head_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alerts_text"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="65dp"
        android:drawablePadding="0dp"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/alerts"
        android:textColor="#2C2C2C"
        android:textSize="30sp"
        app:drawableLeftCompat="@mipmap/traffic_cone_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sites_worker_info_text" />

    <Button
        android:id="@+id/logout_button_worker"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="169dp"
        android:backgroundTint="#2C2C2C"
        android:text="@string/logout"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="false"
        android:textColor="@color/app_background"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alerts_text" />

</androidx.constraintlayout.widget.ConstraintLayout>