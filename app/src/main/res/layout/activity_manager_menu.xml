<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >

    <ImageView
        android:id="@+id/Menu_icon"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/menÃ¹"
        android:foregroundGravity="top|left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu_foreground" />

    <TextView
        android:id="@+id/sites_info_text"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_background"
        android:drawablePadding="0dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:text="@string/site"
        android:elevation="4dp"
        android:textColor="#2C2C2C"
        android:textSize="30sp"
        app:drawableStartCompat="@mipmap/bulldozer_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_info_text" />

    <TextView
        android:id="@+id/account_info_text"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:background="@drawable/rounded_background"
        android:drawablePadding="0dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:elevation="4dp"
        android:text="@string/account"
        android:textColor="#2C2C2C"
        android:textSize="30sp"
        app:drawableLeftCompat="@mipmap/safety_vest_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/create_site_text"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_background"
        android:drawablePadding="0dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:elevation="4dp"
        android:text="@string/create_site"
        android:textColor="#2C2C2C"
        android:textSize="30sp"
        app:drawableLeftCompat="@mipmap/site_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sites_info_text" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#2C2C2C"
        android:elevation="4dp"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/rounded_background"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textColor="@color/app_background"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_site_text" />

</androidx.constraintlayout.widget.ConstraintLayout>