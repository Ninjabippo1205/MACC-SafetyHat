<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">

    <!-- Contenuto principale dell'attività -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0E0E0">

        <ImageView
            android:id="@+id/Menu_icon"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/menù"
            android:foregroundGravity="top|left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu_foreground" />

        <TextView
            android:id="@+id/sites_info_text"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="@string/site"
            android:textColor="#2C2C2C"
            android:textSize="30sp"
            app:drawableStartCompat="@mipmap/bulldozer_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/account_info_text" />

        <TextView
            android:id="@+id/account_info_text"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginTop="200dp"
            android:gravity="center_vertical"
            android:text="@string/account"
            android:textColor="#2C2C2C"
            android:textSize="30sp"
            app:drawableLeftCompat="@mipmap/safety_vest_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/create_site_text"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="@string/create_site"
            android:textColor="#2C2C2C"
            android:textSize="30sp"
            app:drawableLeftCompat="@mipmap/site_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sites_info_text" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#2C2C2C"
            android:text="@string/logout"
            android:textColor="@color/app_background"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_site_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navbar_menu"
        app:itemTextAppearance="@style/NavMenuTextAppearance"
        app:itemIconSize="100dp"
    />

</androidx.drawerlayout.widget.DrawerLayout>
