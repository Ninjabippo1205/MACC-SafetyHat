<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/border_style"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Container verticale per allineare TextView e ScrollView -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <!-- Site ID Text -->
        <TextView
            android:id="@+id/siteID_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SiteID: 1000"
            android:textColor="#2C2C2C"
            android:textSize="12sp" />

        <!-- ScrollView for Communication Text -->
        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="256dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/communication_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2C2C2C"
                android:textSize="16sp" />
        </ScrollView>

        <!-- Timestamp TextView -->
        <TextView
            android:id="@+id/timestamp_text_view"
            android:layout_width="95dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textColor="#808080"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/thumbs_up_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/thumbs_up"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/thumb_up_foreground" />

    <TextView
        android:id="@+id/view_count_text_view"
        android:layout_width="27dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:textColor="#2C2C2C"
        android:textSize="20sp" />
</LinearLayout>
