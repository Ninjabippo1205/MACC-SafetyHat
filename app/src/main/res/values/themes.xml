<!-- res/values/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MACC" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Imposta lo sfondo della splash screen su trasparente -->
        <item name="android:windowBackground">@color/app_background</item>

        <!-- Configurazione della SplashScreen API -->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/transparent_foreground</item>
        <item name="android:windowSplashScreenBackground">@color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.MACC</item>
    </style>
</resources>
