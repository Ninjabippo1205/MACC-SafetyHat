<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"
    />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-feature android:name="android.hardware.location.gps" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/safety_hat_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/safety_hat_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.MACC">

        <!-- Chiave API per Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"
        />

        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.MACC"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.MACC"
            android:exported="true">
        </activity>

        <activity android:name=".LoginActivity">
        </activity>

        <activity android:name=".RegistrationActivity">
        </activity>

        <activity android:name=".ManagerInfoActivity">
        </activity>

        <activity android:name=".ManagermenuActivity">
        </activity>

        <activity android:name=".WorkermenuActivity">
        </activity>

        <activity android:name=".ManagersiteinfoActivity">
        </activity>

        <activity android:name=".CreatesiteActivity">
        </activity>

        <activity android:name=".SiteInfoActivity">
        </activity>

        <activity android:name=".QrScanningActivity">
        </activity>

        <activity android:name=".QRGenerationActivity">
        </activity>

        <activity android:name=".SitesOverviewActivity">
        </activity>

    </application>
</manifest>
